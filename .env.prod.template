# Production Environment Configuration for Docker Deployment
# Copy this file to .env in /opt/Apps/TradeMachine/ on your production server
# and fill in the actual values

# === Docker Configuration ===
# Note: Image name is now lowercase as required by Docker
IMAGE_TAG=main

# === Application Configuration ===
NODE_ENV=production
DB_ENV=production
ORM_CONFIG=production
APP_ENV=production
BASE_DIR=/app
IP=0.0.0.0
PORT=3005

# === Database Configuration ===
# PostgreSQL connection details (running on host systemd)
# IMPORTANT: Do NOT use quotes around the DATABASE_URL value for Docker env-file compatibility
PG_USER=trader_dev
PG_PASSWORD=your_production_db_password
PG_DB=trade_machine
DATABASE_URL=postgresql://trader_dev:your_production_db_password@localhost:5432/trade_machine?schema=production&application_name=tm_server_prod

# === Redis Configuration ===
# Redis connection details (running on host systemd)
REDIS_IP=127.0.0.1
REDIS_PORT=6379
REDISPASS=your_redis_password_if_any

# === Session Configuration ===
SESSION_SECRET=your_secure_session_secret_here

# === Logging Configuration ===
ENABLE_LOGS=true
DB_LOGS=true

# === Email Configuration (SendInBlue/Brevo) ===
EMAIL_KEY_V3=your_sendinblue_api_key_v3
EMAIL_API_URL_V3=https://api.sendinblue.com/v3/smtp
EMAIL_KEY=your_sendinblue_api_key_v2
EMAIL_API_URL=https://api.sendinblue.com/v2.0
SENDINBLUE_SMTP_PASS=your_sendinblue_smtp_password

# === External APIs ===
# ESPN Fantasy API credentials
ESPN_COOKIE=your_espn_cookie_value
ESPN_SWID=your_espn_swid_value

# === Integrations ===
# Slack webhook for trade notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Rollbar error tracking
ROLLBAR_ACCESS_TOKEN=your_rollbar_token
ROLLBAR_ENVIRONMENT=production

# Google Sheets API for trade data
SHEETS_CREDENTIAL_FILE=sheets_creds.json
SHEETS_API_EMAIL=your_service_account_email
SHEETS_API_KEY=your_sheets_api_key
TRADE_SPREADSHEET_ID=your_trade_spreadsheet_id
TRADE_WORKSHEET_ID=your_worksheet_id

# === Application URLs ===
BASE_URL=newtrades.api.akosua.xyz