{
  "name": "trade-machine-server",
  "version": "2.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "watch-test": "npm run test -- --watchAll",
    "watch-test-debug": "npm run debug-test -- --watchAll",
    "watch-debug": "concurrently $NODE_DEBUG_OPTION -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-server": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node -r dotenv/config ./dist/server.js",
    "test": "jest --config ./jest.config.js --detectOpenHandles --runInBand",
    "debug-test": "jest --config ./jest.debug-config.js --detectOpenHandles --runInBand",
    "watch-node": "nodemon -r dotenv/config ./dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json -t stylish",
    "ts-fix": "tslint -c tslint.json -p tsconfig.json -t stylish --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon $NODE_DEBUG_OPTION --inspect dist/server.js",
    "gen-migrate": "npm run build && typeorm migration:generate -f ormconfig -c development -n",
    "run-migrate": "npm run build && typeorm migration:run -f ormconfig -c development",
    "revert-migrate": "npm run build && typeorm migration:revert -f ormconfig -c development"
  },
  "author": "Akosua Asante",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "connect-redis": "^3.4.0",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "lodash": "^4.17.11",
    "nodemailer": "^5.1.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.8.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.7",
    "typeorm": "^0.2.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/connect-redis": "0.0.8",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/faker": "^4.1.4",
    "@types/jest": "^23.3.12",
    "@types/lodash": "^4.14.119",
    "@types/morgan": "^1.7.35",
    "@types/nodemailer": "^4.6.5",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/pg": "^7.4.11",
    "faker": "^4.1.0",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2",
    "winston": "^3.1.0"
  }
}
