{
  "name": "trade-machine-server",
  "version": "2.0.0",
  "description": "Serves the API for FFF TradeMachine 2.0",
  "repository": "https://github.com/akosasante/TradeMachineServer.git",
  "main": "server.js",
  "scripts": {
    "@TESTS_COMMENT": "|----------- TESTING SCRIPTS ---------|",
    "@TESTS_COMMENT@": "|----------- TEST SCRIPTS TO RUN IN CI ---------|",
    "test": "ENABLE_LOGS=false NODE_ENV=test jest --config ./jest.ci-config.js --detectOpenHandles --runInBand --silent --bail --forceExit --ci",
    "@TESTS_COMMENT@@": "|----------- TEST SCRIPTS TO RUN LOCALLY ---------|",
    "test-local": "npm run test-local-unit && npm run test-local-integration",
    "test-local-unit": "NODE_ENV=test jest --config ./jest.config.js --detectOpenHandles --bail --forceExit --setupFiles dotenv/config --testPathPattern=unit/",
    "test-local-integration": "NODE_ENV=test jest --config ./jest.config.js --detectOpenHandles --runInBand--bail --forceExit --testPathPattern=integration/",
    "test-debug": "ENABLE_LOGS=true DB_LOGS=true npm run test-local",
    "test-debug-no-db": "ENABLE_LOGS=true DB_LOGS=false npm run test-local",
    "watch-test-debug": "npm run test-debug -- --watchAll",
    "watch-test-local": "npm run test-local -- --watchAll",
    "test-update-snapshots": "ENABLE_LOGS=false NODE_ENV=test jest --config ./jest.ci-config.js --detectOpenHandles --runInBand --silent --bail --forceExit --ci --testPathPattern=mailer --update-snapshot --setupFiles dotenv/config",

    "@DEV_COMMENT": "|----------- LOCAL DEV SCRIPTS ---------|",
    "watch-ts": "tsc -w",
    "serve-debug": "NODE_ENV=development nodemon $NODE_DEBUG_OPTION --inspect ./dist/server.js -- -r dotenv/config",
    "watch-node": "NODE_ENV=development nodemon -- -r dotenv/config ./dist/server.js",
    "lint": "tslint -c tslint.json -p tsconfig.json -t stylish",
    "lint-fix": "tslint -c tslint.json -p tsconfig.json -t stylish --fix",
    "watch-debug": "concurrently $NODE_DEBUG_OPTION -k -p \"[{name} - {time}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-server": "concurrently -k -p \"[{name} - {time}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",

    "@BUILD_COMMENT": "|----------- BUILD AND SERVE SCRIPTS ---------|",
    "build": "tsc && mkdir -p dist/email/templates && cp -r src/email/templates dist/email/",
    "serve": "node -r dotenv/config ./dist/server.js",
    "typecheck": "tsc --noEmit --incremental false",

    "@DB_COMMENTS": "|----------- DATABASE MIGRATION SCRIPTS ---------|",
    "gen-migrate": "tsc && typeorm migration:generate -f ormconfig -c development -n",
    "gen-migrate-test-empty": "typeorm migration:create -f ormconfig -c test -n empty",
    "gen-migrate-test": "tsc && typeorm migration:generate -f ormconfig -c test -n",
    "gen-migrate-prod": "tsc && typeorm migration:generate -f ormconfig -c production -n",
    "run-migrate": "tsc && typeorm migration:run -f ormconfig -c development",
    "run-migrate-test": "tsc && typeorm migration:run -f ormconfig -c test",
    "run-migrate-prod": "tsc && typeorm migration:run -f ormconfig -c production",
    "revert-migrate": "tsc && typeorm migration:revert -f ormconfig -c development",
    "revert-migrate-test": "tsc && typeorm migration:revert -f ormconfig -c test",
    "revert-migrate-prod": "tsc && typeorm migration:revert -f ormconfig -c production"
  },
  "author": "Akosua Asante",
  "license": "ISC",
  "dependencies": {
    "@fast-csv/parse": "^4.3.1",
    "@slack/webhook": "^5.0.3",
    "axios": "^0.18.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "bull": "^3.15.0",
    "class-transformer": "^0.3.1",
    "class-validator": "0.10.1",
    "compression": "^1.7.4",
    "connect-redis": "^3.4.2",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "custom-fonts-in-emails": "^4.0.1",
    "date-fns": "^2.14.0",
    "dotenv": "^6.2.0",
    "email-templates": "^7.0.5",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "font-awesome-assets": "0.0.8",
    "googleapis": "^55.0.0",
    "lodash": "^4.17.19",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.10",
    "nodemailer-sendinblue-transport": "^1.2.3",
    "ordinal": "^1.0.3",
    "pg": "^7.18.2",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "response-time": "^2.3.2",
    "rollbar": "^2.18.0",
    "routing-controllers": "^0.8.1",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.25",
    "uuid": "^3.4.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/bull": "^3.14.0",
    "@types/compression": "1.0.1",
    "@types/connect-redis": "0.0.14",
    "@types/connect-timeout": "0.0.34",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/email-templates": "^6.0.3",
    "@types/express": "^4.17.7",
    "@types/express-session": "^1.17.0",
    "@types/faker": "^4.1.12",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.157",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.3",
    "@types/node": "^12.12.48",
    "@types/nodemailer": "^6.4.0",
    "@types/pg": "^7.14.3",
    "@types/response-time": "^2.3.4",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^3.4.9",
    "bull-repl": "^0.23.0",
    "faker": "^4.1.0",
    "jest": "^25.5.4",
    "jest-extended": "^0.11.5",
    "nodemon": "^1.19.4",
    "supertest": "^3.4.2",
    "ts-jest": "^25.5.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.6"
  }
}
