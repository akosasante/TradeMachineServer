# Staging Environment Configuration for Docker Deployment
# Copy this file to .env in /opt/Apps/StagingTradeMachine/ on your staging server

# === Docker Configuration ===
IMAGE_TAG=staging

# === Application Configuration ===
NODE_ENV=production
DB_ENV=staging
ORM_CONFIG=staging
APP_ENV=staging
BASE_DIR=/app
IP=0.0.0.0
PORT=3015

# === Database Configuration ===
# IMPORTANT: Do NOT use quotes around the DATABASE_URL value for Docker env-file compatibility
# Format: postgresql://username:password@host:port/database?schema=schema_name&application_name=app_name
PG_USER=trader_dev
PG_PASSWORD=your_staging_db_password
PG_DB=trade_machine
DATABASE_URL=postgresql://trader_dev:your_staging_db_password@localhost:5432/trade_machine?schema=staging&application_name=tm_server_staging

# === Redis Configuration ===
REDIS_IP=127.0.0.1
REDIS_PORT=6379
REDISPASS=your_redis_password_if_any

# === Session Configuration ===
SESSION_SECRET=your_secure_staging_session_secret

# === Logging Configuration ===
ENABLE_LOGS=true
DB_LOGS=true

# === Email Configuration (SendInBlue/Brevo) ===
EMAIL_KEY_V3=your_sendinblue_api_key_v3
EMAIL_API_URL_V3=https://api.sendinblue.com/v3/smtp
EMAIL_KEY=your_sendinblue_api_key_v2
EMAIL_API_URL=https://api.sendinblue.com/v2.0
SENDINBLUE_SMTP_PASS=your_sendinblue_smtp_password

# === External APIs ===
ESPN_COOKIE=your_espn_cookie_value
ESPN_SWID=your_espn_swid_value

# === Integrations ===
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Rollbar error tracking
ROLLBAR_ACCESS_TOKEN=your_rollbar_token
ROLLBAR_ENVIRONMENT=staging

# Google Sheets API
SHEETS_CREDENTIAL_FILE=sheets_creds.json
SHEETS_API_EMAIL=your_service_account_email
SHEETS_API_KEY=your_sheets_api_key
TRADE_SPREADSHEET_ID=your_trade_spreadsheet_id
TRADE_WORKSHEET_ID=your_worksheet_id

# === Application URLs ===
BASE_URL=staging.api.akosua.xyz